{
  "name": "rvcodec-js",
  "displayName": "rvcodec.js",
  "description": "RISC-V instruction encoder/decoder that visualizes assembly-to-binary mappings directly in VSCode.",
  "version": "0.0.3",
  "publisher": "hankhsu1996",
  "author": {
    "name": "Shou-Li Hsu",
    "email": "hank850503@gmail.com"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hankhsu1996/vscode-rvcodec-js"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Education"
  ],
  "keywords": [
    "risc-v",
    "riscv",
    "assembly",
    "encoder",
    "decoder"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rvcodec-js.encode",
        "title": "RISC-V: Encode Instruction"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "rvcodec-js.encode",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "format": "prettier --write \"src/**/*.{ts,js}\""
  },
  "dependencies": {
    "rvcodecjs": "gitlab:luplab/rvcodecjs"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.4.5",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
